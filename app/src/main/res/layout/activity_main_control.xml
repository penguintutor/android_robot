<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#0099cc" tools:context=".MainControl">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <TextView android:id="@+id/fullscreen_content" android:layout_width="match_parent"
        android:layout_height="match_parent" android:keepScreenOn="true" android:textColor="#33b5e5"
        android:textStyle="bold" android:textSize="50sp" android:gravity="center"
        android:text="@string/dummy_content" />

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout android:id="@+id/fullscreen_content_controls" style="?metaButtonBarStyle"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay" android:orientation="horizontal"
            tools:ignore="UselessParent">

            <Button android:id="@+id/dummy_button" style="?metaButtonBarButtonStyle"
                android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_weight="1" android:text="@string/dummy_button" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Android Pi Robot Control"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal|top" />

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal|top">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="right|center_vertical"
                android:layout_row="2"
                android:layout_column="9"
                android:id="@+id/">

                <ImageButton
                    android:layout_width="90dip"
                    android:layout_height="90dip"
                    android:id="@+id/directionButton_1_1"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/directions_1_1"
                    android:scaleType="fitXY"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/directionButton_2_1"
                    android:layout_toStartOf="@+id/directionButton_2_1" />

                <ImageButton
                    android:layout_width="90dip"
                    android:layout_height="90dip"
                    android:id="@+id/directionButton_2_1"
                    android:src="@drawable/directions_2_1"
                    android:scaleType="fitXY"
                    android:layout_alignTop="@+id/directionButton_1_1"
                    android:layout_centerHorizontal="true" />

                <ImageButton
                    android:layout_width="90dip"
                    android:layout_height="90dip"
                    android:id="@+id/directionButton_3_1"
                    android:layout_alignTop="@+id/directionButton_2_1"
                    android:layout_toRightOf="@+id/directionButton_2_1"
                    android:src="@drawable/directions_3_1"
                    android:scaleType="fitXY" />

                <ImageButton
                    android:layout_width="90dip"
                    android:layout_height="90dip"
                    android:id="@+id/directionButton_1_2"
                    android:layout_alignTop="@+id/directionButton_2_2"
                    android:layout_toLeftOf="@+id/directionButton_2_2"
                    android:src="@drawable/directions_1_2"
                    android:scaleType="fitXY" />

                <ImageButton
                    android:layout_width="90dip"
                    android:layout_height="90dip"
                    android:id="@+id/directionButton_2_2"
                    android:src="@drawable/directions_2_2"
                    android:scaleType="fitXY"
                    android:layout_below="@+id/directionButton_2_1"
                    android:layout_centerHorizontal="true" />

                <ImageButton
                    android:layout_width="90dip"
                    android:layout_height="90dip"
                    android:id="@+id/directionButton_3_2"
                    android:layout_alignTop="@+id/directionButton_2_2"
                    android:layout_toRightOf="@+id/directionButton_2_2"
                    android:src="@drawable/directions_3_1"
                    android:scaleType="fitXY" />

                <ImageButton
                    android:layout_width="90dip"
                    android:layout_height="90dip"
                    android:id="@+id/directionButton_1_3"
                    android:layout_alignTop="@+id/directionButton_2_3"
                    android:layout_toLeftOf="@+id/directionButton_2_3"
                    android:src="@drawable/directions_1_3"
                    android:scaleType="fitXY" />


                <ImageButton
                    android:layout_width="90dip"
                    android:layout_height="90dip"
                    android:id="@+id/directionButton_2_3"
                    android:layout_below="@+id/directionButton_2_2"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/directions_2_3"
                    android:scaleType="fitXY" />

                <ImageButton
                    android:layout_width="90dip"
                    android:layout_height="90dip"
                    android:id="@+id/directionButton_3_3"
                    android:layout_alignTop="@+id/directionButton_2_3"
                    android:layout_toRightOf="@+id/directionButton_2_3"
                    android:layout_toEndOf="@+id/directionButton_2_3"
                    android:src="@drawable/directions_3_3"
                    android:scaleType="fitXY" />


            </RelativeLayout>
        </GridLayout>
    </FrameLayout>

</FrameLayout>
