<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#0099cc" tools:context=".MainControl">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <TextView android:id="@+id/fullscreen_content" android:layout_width="match_parent"
        android:layout_height="match_parent" android:keepScreenOn="true" android:textColor="#33b5e5"
        android:textStyle="bold" android:textSize="50sp" android:gravity="center" />

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout android:id="@+id/fullscreen_content_controls" style="?metaButtonBarStyle"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay" android:orientation="horizontal"
            tools:ignore="UselessParent">

        </LinearLayout>



            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="right|center_vertical"
                android:layout_row="2"
                android:layout_column="9"
                android:id="@+id/title">

                <ImageButton
                    android:layout_width="90dip"
                    android:layout_height="90dip"
                    android:id="@+id/directionButton_1_1"
                    android:src="@drawable/directions_1_1"
                    android:scaleType="fitXY"
                    android:layout_alignTop="@+id/directionButton_2_1"
                    android:layout_toLeftOf="@+id/directionButton_2_1"
                    android:layout_toStartOf="@+id/directionButton_2_1" />

                <ImageButton
                    android:layout_width="90dip"
                    android:layout_height="90dip"
                    android:id="@+id/directionButton_2_1"
                    android:src="@drawable/directions_2_1"
                    android:scaleType="fitXY"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/directionButton_1_2"
                    android:layout_toEndOf="@+id/directionButton_1_2" />

                <ImageButton
                    android:layout_width="90dip"
                    android:layout_height="90dip"
                    android:id="@+id/directionButton_3_1"
                    android:layout_alignTop="@+id/directionButton_2_1"
                    android:layout_toRightOf="@+id/directionButton_2_1"
                    android:src="@drawable/directions_3_1"
                    android:scaleType="fitXY" />

                <ImageButton
                    android:layout_width="90dip"
                    android:layout_height="90dip"
                    android:id="@+id/directionButton_1_2"
                    android:layout_alignTop="@+id/directionButton_2_2"
                    android:layout_toLeftOf="@+id/directionButton_2_2"
                    android:src="@drawable/directions_1_2"
                    android:scaleType="fitXY" />

                <ImageButton
                    android:layout_width="90dip"
                    android:layout_height="90dip"
                    android:id="@+id/directionButton_2_2"
                    android:src="@drawable/directions_2_2"
                    android:scaleType="fitXY"
                    android:layout_below="@+id/directionButton_2_1"
                    android:layout_centerHorizontal="true" />

                <ImageButton
                    android:layout_width="90dip"
                    android:layout_height="90dip"
                    android:id="@+id/directionButton_3_2"
                    android:layout_alignTop="@+id/directionButton_2_2"
                    android:layout_toRightOf="@+id/directionButton_2_2"
                    android:src="@drawable/directions_3_2"
                    android:scaleType="fitXY" />

                <ImageButton
                    android:layout_width="90dip"
                    android:layout_height="90dip"
                    android:id="@+id/directionButton_1_3"
                    android:layout_alignTop="@+id/directionButton_2_3"
                    android:layout_toLeftOf="@+id/directionButton_2_3"
                    android:src="@drawable/directions_1_3"
                    android:scaleType="fitXY" />


                <ImageButton
                    android:layout_width="90dip"
                    android:layout_height="90dip"
                    android:id="@+id/directionButton_2_3"
                    android:layout_below="@+id/directionButton_2_2"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/directions_2_3"
                    android:scaleType="fitXY" />

                <ImageButton
                    android:layout_width="90dip"
                    android:layout_height="90dip"
                    android:id="@+id/directionButton_3_3"
                    android:layout_alignTop="@+id/directionButton_2_3"
                    android:layout_toRightOf="@+id/directionButton_2_3"
                    android:layout_toEndOf="@+id/directionButton_2_3"
                    android:src="@drawable/directions_3_3"
                    android:scaleType="fitXY" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/robot_camera_img"
                    android:scaleType="fitXY"
                    android:layout_below="@+id/directionButton_1_3"
                    android:layout_above="@+id/statusText" />

                <SeekBar
                    android:layout_marginTop="20dp"
                    android:layout_width="40dp"
                    android:layout_height="260dp"
                    android:id="@+id/seekBar"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:rotation="270"
                    android:layout_above="@+id/imageView"
                    android:layout_toRightOf="@+id/directionButton_3_1"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentTop="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Not connected"
                    android:id="@+id/statusText"
                    android:layout_alignParentBottom="true"
                    android:layout_toLeftOf="@+id/seekBar"
                    android:layout_alignLeft="@+id/directionButton_1_3"
                    android:layout_alignStart="@+id/directionButton_1_3" />


            </RelativeLayout>
    </FrameLayout>

</FrameLayout>
